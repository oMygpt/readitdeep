# =============================================================================
# Read it DEEP - 环境变量配置
# =============================================================================
# 复制此文件为 .env 并填写实际值
# cp .env.example .env
# =============================================================================

# ==================== 应用配置 ====================
APP_NAME=Read it DEEP
DEBUG=false
SECRET_KEY=
CORS_ORIGINS=*

# ==================== 数据库 ====================
# SQLite (本地开发): sqlite
# PostgreSQL (生产): postgresql://user:password@host:5432/dbname
DATABASE_URL=sqlite

# Supabase (可选)
SUPABASE_URL=
SUPABASE_ANON_KEY=

# ==================== LLM 配置 ====================
LLM_BASE_URL=
LLM_API_KEY=
LLM_MODEL=qwen2.5-72b

# ==================== 翻译 LLM ====================
TRANSLATION_BASE_URL=
TRANSLATION_API_KEY=
TRANSLATION_MODEL=qwen2.5-72b

# ==================== Embedding ====================
# Provider: local | volcengine
EMBEDDING_PROVIDER=local
EMBEDDING_BASE_URL=
EMBEDDING_API_KEY=
EMBEDDING_MODEL=bge-m3

# ==================== MinerU OCR ====================
MINERU_API_URL=https://mineru.net/api/v4
MINERU_API_KEY=

# ==================== 文件存储 ====================
# Type: local | s3
STORAGE_TYPE=local
STORAGE_PATH=./uploads

# S3/OSS (STORAGE_TYPE=s3 时使用)
S3_ENDPOINT=
S3_ACCESS_KEY=
S3_SECRET_KEY=
S3_BUCKET=readitdeep
